<?xml version="1.0" encoding="UTF-8"?>
<div class="basiszoeken-formulier" xmlns:ivdnt="http://www.ivdnt.org/xslt/namespaces">
    <ivdnt:formulierregel>
        <ivdnt:bronselectors/>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Speciale tekens (klik om ze in te voeren)<br/><label class="form-group"><input name="toon-tekens" type="checkbox" class="gtbcheckbox"/>Toon alle tekens</label></ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <ivdnt:include href="specialetekens.xml"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Modern Nederlands trefwoord</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <input type="text" name="lemmodern" class="form-control tekstveld"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Origineel trefwoord</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <input type="text" name="lemma" class="form-control tekstveld"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Woordsoort</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <input type="text" name="lemwrdsrt" class="form-control woordsoortveld"/>
            <ivdnt:modal type="basiszoeken-woordsoort" target-input="lemwrdsrt">
                <ivdnt:modaltrigger><button type="button" class="woordsoortassistentieknop btn btn-secondary">Assistentie...</button></ivdnt:modaltrigger>
                <ivdnt:modalcontent>
                    <ivdnt:modaltitle><h4 class="modal-title">Woordsoortassistentie</h4></ivdnt:modaltitle>
                    <ivdnt:include href="woordsoortassistentie.xml"/>
                </ivdnt:modalcontent>
            </ivdnt:modal>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Woord in betekenis</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <input type="text" name="betekenis" class="form-control tekstveld"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Woord in citaat</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <input type="text" name="citaatcompleet" class="form-control tekstveld"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Woord in artikel</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <input type="text" name="article" class="form-control tekstveld"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel><a href="*** iets ***">Help</a></ivdnt:formulierlabel>
        <ivdnt:include href="basiszoeken-buttons.xml"/>
    </ivdnt:formulierregel>
</div>
