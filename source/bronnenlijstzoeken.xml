<?xml version="1.0" encoding="UTF-8"?>
<ivdnt:formulier class="form-horizontal zoek-formulier" label="Zoeken in bronnenlijst" xmlns:ivdnt="http://www.ivdnt.org/xslt/namespaces">
    <ivdnt:bronselectors suffix="bronnen"/>
    
    <ivdnt:include href="specialetekens.xml"/>

    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Auteur</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <input type="text" name="bronauteur" class="form-control gtb-tekstveld typeahead" data-humanname="auteur"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Verkorte titel</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <input type="text" name="brontitelkort" class="form-control gtb-tekstveld typeahead"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Woorden in titel</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <input type="text" name="brontitel" class="form-control gtb-tekstveld typeahead" data-humanname="woorden in titel"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Datering</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <ivdnt:van-tot-velden van="bronvan" tot="brontot" data-humanname-van="vanaf-datering bron" data-humanname-tot="tot-datering bron"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Lokalisering</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <input type="text" name="bronlocatie" class="form-control gtb-tekstveld typeahead" data-humanname="lokalisering"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Signatuur</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <input type="text" name="bronsig" class="form-control gtb-tekstveld typeahead" data-humanname="signatuur"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Woord in bronartikel</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <input type="text" name="article" class="form-control gtb-tekstveld typeahead" data-humanname="woord in bronartikel"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:formulierregel class="helpregel">
        <div class="col-md-offset-4 col-md-8">
            <a class="btn btn-default" href="*** iets ***"><span class="fa fa-lg fa-info"></span> Help</a>
            <ivdnt:include href="zoek-buttons.xml"/>
        </div>
    </ivdnt:formulierregel>
</ivdnt:formulier>
