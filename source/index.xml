<?xml version="1.0" encoding="UTF-8"?>
<html xmlns:ivdnt="http://www.ivdnt.org/xslt/namespaces">
    <head>
        <title>Instituut voor de Nederlandse Taal - geïntegreerde taalbank</title>
    </head>
    <body>
        <div class="gtb-header">
            <img class="gtb-header-logo" src="img/gtb-logo-header.svg" alt=""/>
            <div class="gtb-header-content">
                <h3 class="gtb-header-title" ivdnt:versioninfo="">De geïntegreerde taalbank <br/><small>Historische woordenboeken op internet</small></h3>
            </div>
        </div>
        
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ivdnt:tabs title-container-class="titles" content-container-class="container">    
                        <ivdnt:tab>
                            <ivdnt:tabtitle>Basiszoeken</ivdnt:tabtitle>
                            <ivdnt:include href="basiszoeken.xml"/>
                        </ivdnt:tab>
                        <ivdnt:tab>
                            <ivdnt:tabtitle>Uitgebreid zoeken</ivdnt:tabtitle>
                            <ivdnt:include href="uitgebreidzoeken.xml"/>
                        </ivdnt:tab>
                        <ivdnt:tab>
                            <ivdnt:tabtitle>Zoeken in bronnenlijst</ivdnt:tabtitle>
                            <ivdnt:include href="bronnenlijstzoeken.xml"/>
                        </ivdnt:tab>
                        <ivdnt:tab id="resultaat">
                            <ivdnt:tabtitle>Resultaat</ivdnt:tabtitle>
                            <ivdnt:include href="resultaat.xml"/>
                        </ivdnt:tab>
                        <ivdnt:tab>
                            <ivdnt:tabtitle>Help &amp; Info</ivdnt:tabtitle>
                            <ivdnt:include href="help-en-info.xml"/>
                        </ivdnt:tab>
                    </ivdnt:tabs>
                </div>
            </div>
        </div>
        <div class="auxiliaries">
            <!-- Verborgen hulpstukken -->            
            <ivdnt:include href="resultaatknoppen.xml"/>
        </div>
    </body>
</html>
