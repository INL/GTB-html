function searchWdb(wdb) {
    //  Note: Id 'gtb-result-table' is defined in xslt/render-results.xslt
    var table = $('#gtb-result-table').DataTable();
    // Adding \b (word boundary marks) and parameter true for regex matching, unless the search is empty:
    if (wdb.length == 0) {
        table.search("").draw(); // Show entire table (again)   
    } else {
        table.search("\\b" + wdb + "\\b", true).draw();
    }
}