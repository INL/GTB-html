<?xml version="1.0" encoding="UTF-8"?>
<ivdnt:formulier class="gtb-resultaatknoppen" id="resultaatknoppen" xmlns:ivdnt="http://www.ivdnt.org/xslt/namespaces">
    
    <ivdnt:modal type="help" suppress-ok-button="true" style="width: 70vw">
        <ivdnt:modaltrigger><button type="button" name="help" class="helpknop btn btn-default">Help...</button></ivdnt:modaltrigger>
        <ivdnt:modalcontent modal-body-class="gtb-modal-body">
            <ivdnt:modaltitle><h3 class="modal-title">Help</h3></ivdnt:modaltitle>
            
            <ivdnt:retrieve-help-text from-tab-with-id="resultaat"/>
            
            <div class="modal-footer">
                <p><button type="button" name="annuleer-help" class="btn btn-secondary" data-dismiss="modal" >Ok</button></p>
            </div>
        </ivdnt:modalcontent>
    </ivdnt:modal>
    
    <ivdnt:modal type="sorteren" suppress-ok-button="true">
        <ivdnt:modaltrigger><button type="button" class="sorteerknop btn btn-default">Sorteren...</button></ivdnt:modaltrigger>
        <ivdnt:modalcontent>
            <ivdnt:modaltitle><h3 class="modal-title">Sorteren tussenresultaat</h3></ivdnt:modaltitle>
            <div class="form-horizontal" id="sleutels">
                
                <ivdnt:formulierregel>
                    <ivdnt:formulierlabel>Eerste sleutel:</ivdnt:formulierlabel>
                    <ivdnt:formulierinput>
                        <ivdnt:sorteeropties name="sleutel1"/>
                    </ivdnt:formulierinput>
                </ivdnt:formulierregel>
                <ivdnt:formulierregel>
                    <ivdnt:formulierlabel>Tweede sleutel:</ivdnt:formulierlabel>
                    <ivdnt:formulierinput>
                        <ivdnt:sorteeropties name="sleutel2"/>
                    </ivdnt:formulierinput>
                </ivdnt:formulierregel>
                <ivdnt:formulierregel>
                    <ivdnt:formulierlabel>Derde sleutel:</ivdnt:formulierlabel>
                    <ivdnt:formulierinput>
                        <ivdnt:sorteeropties name="sleutel3"/>
                    </ivdnt:formulierinput>
                </ivdnt:formulierregel>
                <ivdnt:formulierregel>
                    <ivdnt:formulierlabel>Vierde sleutel:</ivdnt:formulierlabel>
                    <ivdnt:formulierinput>
                        <ivdnt:sorteeropties name="sleutel4"/>
                    </ivdnt:formulierinput>
                </ivdnt:formulierregel>
                
               
                <ivdnt:formulierregel>
                    <ivdnt:formulierlabel>Sorteren</ivdnt:formulierlabel>
                    <ivdnt:formulierinput>
                        <label class="radio-inline gtbradio"><input type="radio" name="sorteervolgorde" value="oplopend" checked="checked"/>oplopend</label>
                        <label class="radio-inline gtbradio"><input type="radio" name="sorteervolgorde" value="aflopend"/>aflopend</label>
                    </ivdnt:formulierinput>
                </ivdnt:formulierregel>
            </div>
        </ivdnt:modalcontent>
        <ivdnt:modalfooter>
            <button type="button" name="doe-sorteren" class="btn btn-default btn-primary" data-dismiss="modal" data-modaltype="{ancestor::ivdnt:modal/@type}">Sorteren</button>
            <button type="button" name="wis-sorteren" class="btn btn-secondary">Wissen</button>
            <button type="button" name="annuleer-sorteren" class="btn btn-secondary" data-dismiss="modal" >Annuleren</button>
        </ivdnt:modalfooter>    
    </ivdnt:modal>
    
    <ivdnt:modal type="exporteren" suppress-ok-button="true">
        <ivdnt:modaltrigger><button class="exporteerknop btn btn-default" name="exporteren">Exporteren...</button></ivdnt:modaltrigger>
        <ivdnt:modalcontent>
            <ivdnt:modaltitle><h4 class="modal-title">Exporteren tussenresultaat</h4></ivdnt:modaltitle>
            
            <div class="form-horizontal">
                <p>Kies een formaat voor het te exporteren tussenresultaat</p>
                <ivdnt:formulierregel>
                    <ivdnt:formulierlabel>Formaat</ivdnt:formulierlabel>
                    <ivdnt:formulierinput>
                       <label class="radio-inline gtbradio"><input type="radio" name="uitvoer" value="html" checked="checked"/>HTML</label>
                       <label class="radio-inline gtbradio"><input type="radio" name="uitvoer" value="xml"/>XML</label>
                       <label class="radio-inline gtbradio"><input type="radio" name="uitvoer" value="csv"/>CSV</label>
                    </ivdnt:formulierinput>
                </ivdnt:formulierregel>
            </div>
        </ivdnt:modalcontent>
        <ivdnt:modalfooter>
            <button type="button" name="doe-exporteren" class="btn btn-default btn-primary" data-dismiss="modal" data-modaltype="exporteren">Exporteren</button>
            <button type="button" name="annuleer-exportorteren" class="btn btn-secondary" data-dismiss="modal" >Annuleren</button> 
        </ivdnt:modalfooter>
    </ivdnt:modal>
    
   <button class="exporteerknop btn btn-default" name="doe-afdrukken">Afdrukken...</button>
    <!-- De resterende col-md-6 gaat naar de navigatieknoppen -->
</ivdnt:formulier>