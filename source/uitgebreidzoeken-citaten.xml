<?xml version="1.0" encoding="UTF-8"?>
<ivdnt:collapse label="Citaten" xmlns:ivdnt="http://www.ivdnt.org/xslt/namespaces">
    <ivdnt:formulierregel>
        <ivdnt:formulierlabel>Woord in citaattekst</ivdnt:formulierlabel>
        <ivdnt:formulierinput>
            <input type="text" name="citaat" class="form-control gtb-tekstveld typeahead" data-humanname="woord in citaattekst"/>
        </ivdnt:formulierinput>
    </ivdnt:formulierregel>
    
    <ivdnt:collapse label="Brongegevens">
        <ivdnt:formulierregel>
            <ivdnt:formulierlabel>Auteur citaat</ivdnt:formulierlabel>
            <ivdnt:formulierinput>
                <input type="text" name="bronauteur" class="form-control gtb-tekstveld typeahead" data-humanname="auteur citaat"/>
            </ivdnt:formulierinput>
        </ivdnt:formulierregel>
        <ivdnt:formulierregel>
            <ivdnt:formulierlabel>Verkorte brontitel</ivdnt:formulierlabel>
            <ivdnt:formulierinput>
                <input type="text" name="brontitel" class="form-control gtb-tekstveld typeahead" data-humanname="verkorte brontitel"/>
            </ivdnt:formulierinput>
        </ivdnt:formulierregel>
        <ivdnt:formulierregel>
            <ivdnt:formulierlabel>Datering bron</ivdnt:formulierlabel>
            <ivdnt:formulierinput>
                <ivdnt:van-tot-velden van="bronvan" tot="brontot" data-humanname-van="vanaf-datering citaat" data-humanname-tot="tot-datering citaat"/>
            </ivdnt:formulierinput>
        </ivdnt:formulierregel>
        <ivdnt:formulierregel>
            <ivdnt:formulierlabel>Lokalisering bron</ivdnt:formulierlabel>
            <ivdnt:formulierinput>
                <input type="text" name="bronlocatie" class="form-control gtb-tekstveld typeahead"/>
            </ivdnt:formulierinput>
        </ivdnt:formulierregel>
    </ivdnt:collapse>
    
    <ivdnt:collapse label="Oudste citaat">    
        <ivdnt:formulierregel>
            <ivdnt:formulierlabel>Datering oudste citaat</ivdnt:formulierlabel>
            <ivdnt:formulierinput>
                <ivdnt:van-tot-velden van="oudvan" tot="oudtot" data-humanname-van="vanaf-datering oudste citaat" data-humanname-tot="tot-datering oudste citaat"/>
            </ivdnt:formulierinput>
        </ivdnt:formulierregel>
        <ivdnt:formulierregel>
            <ivdnt:formulierlabel>Lokalisering oudste citaat</ivdnt:formulierlabel>
            <ivdnt:formulierinput>
                <input type="text" name="oudlocatie" class="form-control gtb-tekstveld typeahead" data-humanname="lokalisering oudste citaat"/>
            </ivdnt:formulierinput>
        </ivdnt:formulierregel>
    </ivdnt:collapse>
</ivdnt:collapse>

