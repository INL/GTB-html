<?xml version="1.0" encoding="UTF-8"?>
<div xmlns:ivdnt="http://www.ivdnt.org/xslt/namespaces">
    <div class="col-md-2">
        <!--<button class="btn btn-secondary"  name="xxx">Geschiedenis</button>-->
        <ivdnt:modal type="geschiedenis" suppress-ok-button="true" style="width: 70vw">
            <ivdnt:modaltrigger><button type="button" name="geschiedenis" class="geschiedenisknop btn btn-secondary">Geschiedenis...</button></ivdnt:modaltrigger>
            <ivdnt:modalcontent>
                <ivdnt:modaltitle><h4 class="modal-title">Overzicht eerder gestelde zoekvragen</h4></ivdnt:modaltitle>

                <div class="gtb-zoekvragen-geschiedenis">
                    <!-- Hier worden de zoekvragen in geplaatst -->
                </div>
                <div class="modal-footer">
                    <p class="row">
                        <button type="button" name="doe-selecteervraag" class="btn btn-default btn-primary" data-dismiss="modal">Selecteer</button>
                        <button type="button" name="annuleer-sorteren" class="btn btn-secondary" data-dismiss="modal" >Annuleren</button>
                    </p>
                </div>
            </ivdnt:modalcontent>
        </ivdnt:modal>
    </div>
    <div class="col-md-1"><button class="btn btn-secondary"  name="wis-zoeken">Wis</button></div>
    <div class="col-md-1"><img class="gtb-keyboard-icon" src="keyboard.png" alt="Icoon met toetsenbordje" title="Klik om speciale tekens in te voeren"/></div>
    <div class="col-md-1"><button class="btn btn-primary gtb-zoek-button" name="start-zoeken" type="submit">Zoek</button></div>
    <div class="col-md-3 gtbcheckbox"><label class="form-group">Letters exact <input data-inputname="sensitive" data-humanname="letters exact" type="checkbox" name="sensitive" class="checkbox-inline"/></label></div>
</div>